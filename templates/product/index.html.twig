{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Our Products</h1>

    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="product-card h-100">
                    {% if product.image %}
                        <div class="overflow-hidden">
                            <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                                 class="card-img-top product-image" 
                                 alt="{{ product.name }}">
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <span class="category-badge mb-2 d-inline-block">
                            {{ product.category.name }}
                        </span>
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="price-tag">â‚¬{{ product.price }}</span>
                            <span class="stock-status {% if product.stock > 0 %}in-stock{% else %}out-of-stock{% endif %}">
                                {% if product.stock > 0 %}
                                    In Stock ({{ product.stock }})
                                {% else %}
                                    Out of Stock
                                {% endif %}
                            </span>
                        </div>
                        <div class="mt-3">
                            {% if product.stock > 0 %}
                                <form action="{{ path('cart_add', {'id': product.id}) }}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-primary w-100">
                                        Add to Cart
                                    </button>
                                </form>
                            {% else %}
                                <button class="btn btn-secondary w-100" disabled>
                                    Out of Stock
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    No products available at the moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
