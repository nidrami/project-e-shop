<h1>Category List</h1>

{% if categories|length > 0 %}
    <ul>
        {% for category in categories %}
            <li>{{ category.name }}</li>
        {% endfor %}
    </ul>
{% else %}
    <p>No categories found. Add a new one below!</p>
{% endif %}

<a href="{{ path('category_add') }}" class="btn btn-primary">Add Category</a>
