{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">My Profile</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <p class="form-control-static">{{ user.email }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Member Since</label>
                        <p class="form-control-static">{{ user.createdAt|date('F j, Y') }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Total Orders</label>
                        <p class="form-control-static">{{ user.orders|length }}</p>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('user_orders') }}" class="btn btn-primary">View My Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 