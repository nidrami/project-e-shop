{% extends 'base.html.twig' %}

{% block title %}Orders Management{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Orders Management</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.user.email }}</td>
                        <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>â‚¬{{ order.total }}</td>
                        <td>{{ order.status }}</td>
                        <td>
                            <a href="{{ path('admin_order_details', {id: order.id}) }}" class="btn btn-sm btn-info">View Details</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %} 